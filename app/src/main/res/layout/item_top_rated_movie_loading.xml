<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_margin="8dp"
            >

            <ImageView
                android:id="@+id/imgMovie"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@color/colorShimmerDefault"/>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/lblTitleMovie"
            android:layout_width="100dp"
            android:layout_height="14dp"
            android:background="@color/colorShimmerDefault"
            android:maxLines="1"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/montserrat_alternates_black"
            />

        <TextView
            android:id="@+id/lblReleaseDate"
            android:layout_width="90dp"
            android:layout_height="13dp"
            android:background="@color/colorShimmerDefault"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_alternates_regular"
            />

    </LinearLayout>
</layout>